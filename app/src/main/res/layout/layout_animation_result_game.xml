<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/cl_fragment_animation_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_background_animation"
    android:layout_gravity="top|fill_horizontal"
    android:paddingTop="5sp"
    android:paddingBottom="20sp"
    android:paddingRight="5sp"
    android:paddingLeft="5sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/funny_animation_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:padding="10sp"
        app:layout_constraintDimensionRatio="1:1.2"
        android:src="@drawable/congratulations_image_funny"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_team_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/congratulation_winner"/>
    <TextView
        android:id="@+id/congratulation_winner"
        android:text="It seems someone out there has won my game!"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2sp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textColor="@color/bowling_yellow"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/funny_animation_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/funny_animation_img"
        tools:text="Message congratulations"/>
    <TextView
        android:id="@+id/result_team_one"
        android:text="Team 1 result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/bowling_white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:layout_margin="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:background="@drawable/rectangle_button_submit_enabled"
        app:layout_constraintTop_toBottomOf="@id/funny_animation_img"
        tools:text="Team 1 result"/>
    <TextView
        android:id="@+id/result_team_two"
        android:text="Team 2 result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/bowling_white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:layout_margin="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:background="@drawable/rectangle_button_submit_enabled"
        app:layout_constraintTop_toBottomOf="@id/result_team_one"
        tools:text="Team 1 result"/>
</android.support.constraint.ConstraintLayout>