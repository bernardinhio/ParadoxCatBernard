<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="bernardo.bernardinhio.paradoxcat.viewmodel.TrackingScoreActivityViewmodel">
        </variable>
    </data>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{viewModel.activeTeamNumber == 1 ? @color/bowling_color_team_one : @color/bowling_color_team_two}">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp">
            <include layout="@layout/container_animation_congratulation"/>
            <ImageView
                android:id="@+id/my_score_logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:src="@drawable/my_score"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/my_total_score"
                app:layout_constraintTop_toTopOf="@id/my_total_score"
                app:layout_constraintBottom_toBottomOf="@id/my_total_score"/>
            <TextView
                android:id="@+id/my_total_score"
                android:textColor="@color/bowling_black"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/my_score_logo"
                android:text="@{viewModel.activeTeamTotalScore}"
                tools:text="My total Score"/>
            <ImageView
                android:id="@+id/opponent_score_logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:src="@drawable/opponent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/opponent_total_score"
                app:layout_constraintTop_toTopOf="@id/opponent_total_score"
                app:layout_constraintBottom_toBottomOf="@id/opponent_total_score"/>
            <TextView
                android:id="@+id/opponent_total_score"
                android:textColor="@color/bowling_black"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/my_total_score"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/opponent_score_logo"
                android:text="@{viewModel.opponentTeamTotalScore}"
                tools:text="Opponent Score"/>
            <Button
                android:id="@+id/bt_to_other_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:textColor="@color/bowling_white"
                android:textAllCaps="false"
                android:background="@drawable/button_submit"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:drawableRight="@drawable/baseline_repeat_white_18dp"
                android:drawablePadding="5sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/opponent_total_score"
                android:text="@{viewModel.messageSubmitButton}"
                android:onClick="@{(view) -> viewModel.submitEntry(view)}"
                android:enabled="@{viewModel.submitEnabled}"
                tools:text="Save and go to next player"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/frame_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:padding="10sp"
                android:background="@drawable/rectangle_transparent_frame"
                app:layout_constraintTop_toBottomOf="@id/bt_to_other_team">
                <TextView
                    android:id="@+id/current_frame_metrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/bowling_black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18sp"
                    android:padding="5sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@{viewModel.frameTitleInfo}"
                    tools:text="Frame number and frame score"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/first_roll"
                    android:layout_margin="5sp"
                    android:padding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bowling_black"
                    android:hint="Roll 1"
                    android:maxLength="2"
                    android:inputType="number"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="25sp"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/first_roll_info"
                    app:layout_constraintTop_toBottomOf="@id/current_frame_metrics"
                    android:background="@{viewModel.firstRollFinished == false ? @drawable/rectangle_white_inside_border_black : @drawable/rectangle_light_gray_inside_border_gray}"
                    android:text="@={viewModel.firstRoll}"
                    android:afterTextChanged="@{(editable) -> viewModel.afterTextChangedFirstRoll(editable)}"
                    android:enabled="@{viewModel.firstRollEnabled}"/>
                <TextView
                    android:id="@+id/first_roll_info"
                    android:layout_width="0dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/first_roll"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/first_roll"
                    app:layout_constraintBottom_toBottomOf="@id/first_roll"
                    android:text="@{viewModel.firstRollInfo}"
                    tools:text="which frame used it as bonus"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/second_roll"
                    android:layout_margin="5sp"
                    android:padding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bowling_black"
                    android:hint="Roll 2"
                    android:maxLength="2"
                    android:inputType="number"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="25sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/secon_roll_info"
                    app:layout_constraintTop_toBottomOf="@id/first_roll"
                    android:background="@{viewModel.secondRollFinished == false ? @drawable/rectangle_white_inside_border_black : @drawable/rectangle_light_gray_inside_border_gray}"
                    android:visibility="@{viewModel.hasSecondRollRight ? View.VISIBLE : View.INVISIBLE}"
                    android:enabled="@{viewModel.secondRollEnabled}"
                    android:text="@={viewModel.secondRoll}"
                    android:afterTextChanged="@{(editable) -> viewModel.afterTextChangedSecondRoll(editable)}"/>
                <TextView
                    android:id="@+id/secon_roll_info"
                    android:layout_width="0dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/second_roll"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/second_roll"
                    app:layout_constraintBottom_toBottomOf="@id/second_roll"
                    android:text="@{viewModel.secondRollInfo}"
                    tools:text="which frame used it as bonus"/>
                <TextView
                    android:id="@+id/frame_completed"
                    android:textColor="@color/bowling_color_blue"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    android:layout_margin="5sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/second_roll"
                    android:text="@{viewModel.textIsFrameCompleted}"
                    tools:text="Not completed"/>
                <TextView
                    android:id="@+id/frame_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bowling_color_purple"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    android:layout_margin="5sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/frame_completed"
                    app:layout_constraintBottom_toBottomOf="@id/frame_completed"
                    android:visibility="@{viewModel.frameCategory.empty != true ? View.VISIBLE : View.INVISIBLE}"
                    android:text="@{viewModel.frameCategory}"
                    tools:text="frame category"/>
                <ImageView
                    android:id="@+id/logo_bonus1"
                    android:src="@drawable/bonus_blue_light"
                    android:layout_width="45sp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/frame_completed"
                    app:layout_constraintTop_toTopOf="@id/first_bonus_received"
                    app:layout_constraintBottom_toBottomOf="@id/first_bonus_received"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:visibility="@{viewModel.messageFirstBonus.empty != true ? View.VISIBLE : View.INVISIBLE}" />
                <TextView
                    android:id="@+id/first_bonus_received"
                    android:textColor="@color/bowling_color_sky_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    app:layout_constraintTop_toBottomOf="@id/frame_completed"
                    app:layout_constraintLeft_toRightOf="@id/logo_bonus1"
                    android:visibility="@{viewModel.messageFirstBonus.empty != true ? View.VISIBLE : View.INVISIBLE}"
                    android:text="@{viewModel.messageFirstBonus}"
                    tools:text="first Bonus"/>
                <ImageView
                    android:id="@+id/logo_bonus2"
                    android:src="@drawable/bonus_logo_medal"
                    android:layout_width="45sp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/first_bonus_received"
                    app:layout_constraintTop_toTopOf="@id/second_bonus_received"
                    app:layout_constraintBottom_toBottomOf="@id/second_bonus_received"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:visibility="@{viewModel.messageSecondBonus.empty != true ? View.VISIBLE : View.INVISIBLE}" />
                <TextView
                    android:id="@+id/second_bonus_received"
                    android:textColor="@color/bowling_color_sky_blue"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    app:layout_constraintTop_toBottomOf="@id/first_bonus_received"
                    app:layout_constraintLeft_toRightOf="@id/logo_bonus2"
                    android:visibility="@{viewModel.messageSecondBonus.empty != true ? View.VISIBLE : View.INVISIBLE}"
                    android:text="@{viewModel.messageSecondBonus}"
                    tools:text="second Bonus"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>²
    </ScrollView>
</layout>