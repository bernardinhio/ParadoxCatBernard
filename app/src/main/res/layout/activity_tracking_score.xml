<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="bernardo.bernardinhio.paradoxcat.viewmodel.TrackingScoreActivityViewmodel">
        </variable>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{(viewModel.activeTeamNumber == 1) ? @color/bowling_color_team_one : @color/bowling_color_team_two}">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp">
            <include layout="@layout/container_animation_congratulation"/>
            <ImageView
                android:id="@+id/my_score_logo"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginBottom="5sp"
                android:src="@drawable/my_total_score"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/my_total_score"
                app:layout_constraintTop_toTopOf="@id/my_total_score"
                app:layout_constraintBottom_toBottomOf="@id/my_total_score"/>
            <TextView
                android:id="@+id/my_total_score"
                android:textColor="@color/bowling_black"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="@id/if_frame_is_extra"
                app:layout_constraintLeft_toRightOf="@id/my_score_logo"
                android:text="@{viewModel.activeTeamTotalScore}"
                tools:text="My total Score"/>
            <ImageView
                android:id="@+id/opponent_score_logo"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:src="@drawable/opponent_total_score"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/opponent_total_score"
                app:layout_constraintTop_toTopOf="@id/opponent_total_score"
                app:layout_constraintBottom_toBottomOf="@id/opponent_total_score"/>
            <TextView
                android:id="@+id/opponent_total_score"
                android:textColor="@color/bowling_black"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/my_total_score"
                app:layout_constraintRight_toRightOf="@id/if_frame_is_extra"
                app:layout_constraintLeft_toRightOf="@id/opponent_score_logo"
                android:text="@{viewModel.opponentTeamTotalScore}"
                tools:text="Opponent Score"/>
            <ImageView
                android:id="@+id/if_frame_is_extra"
                android:src="@drawable/logo_extra_roll"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginRight="10sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/my_total_score"
                app:layout_constraintBottom_toBottomOf="@id/opponent_total_score"
                app:layout_constraintLeft_toRightOf="@id/my_total_score"
                android:visibility="@{(viewModel.teamOneNeedsExtra || viewModel.teamTwoNeedsExtra) ? View.VISIBLE : View.INVISIBLE}"/>
            <Button
                android:id="@+id/bt_to_other_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:textColor="@color/bowling_white"
                android:textAllCaps="false"
                android:background="@drawable/button_submit"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:drawablePadding="5sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/opponent_total_score"
                android:text="@{viewModel.messageSubmitButton}"
                android:drawableRight="@{(viewModel.goToNextTeam == true) ? @drawable/baseline_repeat_white_18dp : @drawable/baseline_send_white_18dp}"
                android:onClick="@{(view) -> viewModel.submitEntry(view)}"
                android:enabled="@{viewModel.submitEnabled}"
                tools:text="Save and go to next player"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/frame_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:paddingBottom="20sp"
                android:paddingTop="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:background="@drawable/rectangle_transparent_frame"
                app:layout_constraintTop_toBottomOf="@id/bt_to_other_team">
                <TextView
                    android:id="@+id/current_frame_metrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/bowling_black"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18sp"
                    android:padding="5sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@{viewModel.frameTitleInfo}"
                    tools:text="Frame number and frame score"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/first_roll"
                    android:layout_margin="5sp"
                    android:padding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bowling_black"
                    android:hint="Roll 1"
                    android:maxLength="2"
                    android:inputType="number"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="25sp"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/first_roll_info"
                    app:layout_constraintTop_toBottomOf="@id/current_frame_metrics"
                    android:background="@{viewModel.firstRollFinished == false ? @drawable/rectangle_white_inside_border_black : @drawable/rectangle_light_gray_inside_border_gray}"
                    android:text="@={viewModel.firstRollScore}"
                    android:afterTextChanged="@{(editable) -> viewModel.afterTextChangedFirstRoll(editable)}"
                    android:enabled="@{viewModel.firstRollEnabled}"/>
                <TextView
                    android:id="@+id/first_roll_info"
                    android:layout_width="0dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/first_roll"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/first_roll"
                    app:layout_constraintBottom_toBottomOf="@id/first_roll"
                    android:text="@{viewModel.firstRollInfo}"
                    tools:text="which frame used it as bonus"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/second_roll"
                    android:layout_margin="5sp"
                    android:padding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bowling_black"
                    android:hint="Roll 2"
                    android:maxLength="2"
                    android:inputType="number"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="25sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/secon_roll_info"
                    app:layout_constraintTop_toBottomOf="@id/first_roll"
                    android:background="@{viewModel.secondRollFinished == false ? @drawable/rectangle_white_inside_border_black : @drawable/rectangle_light_gray_inside_border_gray}"
                    android:visibility="@{viewModel.hasSecondRollRight ? View.VISIBLE : View.GONE}"
                    android:enabled="@{viewModel.secondRollEnabled}"
                    android:text="@={viewModel.secondRollScore}"
                    android:afterTextChanged="@{(editable) -> viewModel.afterTextChangedSecondRoll(editable)}"/>
                <TextView
                    android:id="@+id/secon_roll_info"
                    android:layout_width="0dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/second_roll"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/second_roll"
                    app:layout_constraintBottom_toBottomOf="@id/second_roll"
                    android:visibility="@{(!viewModel.secondRollInfo.empty &amp;&amp; viewModel.hasSecondRollRight) ? View.VISIBLE : View.GONE}"
                    android:text="@{viewModel.secondRollInfo}"
                    tools:text="which frame used it as bonus"/>
                <TextView
                    android:id="@+id/rolls_completed"
                    android:textColor="@color/bowling_color_sky_blue"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:padding="5sp"
                    android:layout_margin="5sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/second_roll"
                    android:visibility="@{!viewModel.textIsFrameCompleted.empty ? View.VISIBLE : View.GONE}"
                    android:text="@{viewModel.textIsFrameCompleted}"
                    tools:text="Rolls not completed"/>
                <TextView
                    android:id="@+id/frame_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bowling_color_purple"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:padding="5sp"
                    android:layout_margin="5sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rolls_completed"
                    app:layout_constraintBottom_toBottomOf="@id/rolls_completed"
                    android:visibility="@{!viewModel.frameCategory.empty ? View.VISIBLE : View.GONE}"
                    android:text="@{viewModel.frameCategory}"
                    tools:text="category"/>

                <LinearLayout
                    android:id="@+id/separator_bonuses_received"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bowling_gray_color_disabled"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    app:layout_constraintTop_toBottomOf="@id/rolls_completed"
                    android:visibility="@{(!viewModel.uiMessageFirstBonusReceived.empty || viewModel.isBonusOneReceived) || (!viewModel.uiMessageSecondBonusReceived.empty || viewModel.isBonusTwoReceived)? View.VISIBLE : View.GONE}"/>
                <TextView
                    android:id="@+id/label_bonuses_received"
                    android:text="Bonuses received"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    app:layout_constraintTop_toBottomOf="@id/separator_bonuses_received"
                    android:visibility="@{(!viewModel.uiMessageFirstBonusReceived.empty || viewModel.isBonusOneReceived) || (!viewModel.uiMessageSecondBonusReceived.empty || viewModel.isBonusTwoReceived)? View.VISIBLE : View.GONE}"
                    tools:text="label_bonuses_received"/>

                <TextView
                    android:id="@+id/label_bonus_one_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_blue_light_inside_border_black"
                    android:fontFamily="sans-serif-condensed"
                    android:text="B1"
                    android:textColor="@color/bowling_black"
                    android:textSize="15sp"
                    android:layout_marginTop="10sp"
                    android:visibility="@{(!viewModel.uiMessageFirstBonusReceived.empty || viewModel.isBonusOneReceived) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_received"
                    tools:text="B1" />
                <ImageView
                    android:id="@+id/arrow_label_bonus_one_received"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/outline_subdirectory_arrow_left_black_18dp"
                    app:layout_constraintTop_toTopOf="@id/label_bonus_one_received"
                    app:layout_constraintBottom_toBottomOf="@id/label_bonus_one_received"
                    app:layout_constraintLeft_toRightOf="@id/label_bonus_one_received"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_received"
                    android:visibility="@{(!viewModel.uiMessageFirstBonusReceived.empty || viewModel.isBonusOneReceived) ? View.VISIBLE : View.GONE}" />
                <TextView
                    android:id="@+id/points_bonus_one_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_white_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_received"
                    app:layout_constraintLeft_toRightOf="@id/arrow_label_bonus_one_received"
                    android:text="7"
                    android:visibility="@{(viewModel.uiMessageFirstBonusReceived.empty &amp;&amp; viewModel.isBonusOneReceived) ? View.VISIBLE : View.GONE}"
                    tools:text="PB1"/>
                <ImageView
                    android:id="@+id/arrow_points_bonus_one_received"
                    android:src="@drawable/outline_arrow_back_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_received"
                    app:layout_constraintTop_toTopOf="@id/points_bonus_one_received"
                    app:layout_constraintBottom_toBottomOf="@id/points_bonus_one_received"
                    app:layout_constraintLeft_toRightOf="@id/points_bonus_one_received"
                    android:layout_marginLeft="5sp"
                    android:visibility="@{(viewModel.uiMessageFirstBonusReceived.empty &amp;&amp; viewModel.isBonusOneReceived) ? View.VISIBLE : View.GONE}" />
                <TextView
                    android:id="@+id/provider_roll_for_bonus_one_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_white_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_received"
                    app:layout_constraintLeft_toRightOf="@id/arrow_points_bonus_one_received"
                    android:text="R2"
                    android:visibility="@{(viewModel.uiMessageFirstBonusReceived.empty &amp;&amp; viewModel.isBonusOneReceived) ? View.VISIBLE : View.GONE}"
                    tools:text="R or extra" />
                <TextView
                    android:id="@+id/provider_frame_for_bonus_one_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_light_gray_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_received"
                    app:layout_constraintLeft_toRightOf="@id/provider_roll_for_bonus_one_received"
                    android:text="Frame #5"
                    android:visibility="@{(viewModel.uiMessageFirstBonusReceived.empty &amp;&amp; viewModel.isBonusOneReceived) ? View.VISIBLE : View.GONE}"
                    tools:text="F5" />
                <TextView
                    android:id="@+id/message_first_bonus_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_received"
                    app:layout_constraintLeft_toRightOf="@id/arrow_label_bonus_one_received"
                    android:visibility="@{(!viewModel.uiMessageFirstBonusReceived.empty &amp;&amp; !viewModel.isBonusOneReceived)? View.VISIBLE : View.GONE}"
                    android:text="@{viewModel.uiMessageFirstBonusReceived}"
                    tools:text="first Bonus received"/>

                <TextView
                    android:id="@+id/label_bonus_two_received"
                    tools:text="B2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_blue_sea_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonus_one_received"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="B2"
                    android:visibility="@{(!viewModel.uiMessageSecondBonusReceived.empty || viewModel.isBonusTwoReceived) ? View.VISIBLE : View.GONE}"/>
                <ImageView
                    android:id="@+id/arrow_label_bonus_two_received"
                    android:src="@drawable/outline_subdirectory_arrow_left_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/label_bonus_two_received"
                    app:layout_constraintBottom_toBottomOf="@id/label_bonus_two_received"
                    app:layout_constraintTop_toBottomOf="@id/label_bonus_one_received"
                    app:layout_constraintLeft_toRightOf="@id/label_bonus_two_received"
                    android:visibility="@{(!viewModel.uiMessageSecondBonusReceived.empty || viewModel.isBonusTwoReceived) ? View.VISIBLE : View.GONE}"/>
                <TextView
                    android:id="@+id/points_bonus_two_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_white_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonus_one_received"
                    app:layout_constraintLeft_toRightOf="@id/arrow_label_bonus_two_received"
                    android:text="5"
                    android:visibility="@{(viewModel.uiMessageSecondBonusReceived.empty &amp;&amp; viewModel.isBonusTwoReceived) ? View.VISIBLE : View.GONE}"
                    tools:text="PB2"/>
                <ImageView
                    android:id="@+id/arrow_points_bonus_two_received"
                    android:src="@drawable/outline_arrow_back_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/points_bonus_two_received"
                    app:layout_constraintBottom_toBottomOf="@id/points_bonus_two_received"
                    app:layout_constraintLeft_toRightOf="@id/points_bonus_two_received"
                    app:layout_constraintTop_toBottomOf="@id/label_bonus_one_received"
                    android:layout_marginLeft="5sp"
                    android:visibility="@{(viewModel.uiMessageSecondBonusReceived.empty &amp;&amp; viewModel.isBonusTwoReceived) ? View.VISIBLE : View.GONE}"/>
                <TextView
                    android:id="@+id/provider_roll_for_bonus_two_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_white_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonus_one_received"
                    app:layout_constraintLeft_toRightOf="@id/arrow_points_bonus_two_received"
                    android:layout_marginLeft="5sp"
                    android:text="R1"
                    android:visibility="@{(viewModel.uiMessageSecondBonusReceived.empty &amp;&amp; viewModel.isBonusTwoReceived) ? View.VISIBLE : View.GONE}"
                    tools:text="R or extra"/>
                <TextView
                    android:id="@+id/provider_frame_for_bonus_two_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_light_gray_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonus_one_received"
                    app:layout_constraintLeft_toRightOf="@id/provider_roll_for_bonus_two_received"
                    android:text="Frame #6"
                    android:visibility="@{(viewModel.uiMessageSecondBonusReceived.empty &amp;&amp; viewModel.isBonusTwoReceived) ? View.VISIBLE : View.GONE}"
                    tools:text="F6"/>
                <TextView
                    android:id="@+id/message_second_bonus_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    app:layout_constraintLeft_toRightOf="@id/arrow_label_bonus_two_received"
                    app:layout_constraintTop_toBottomOf="@id/label_bonus_one_received"
                    android:visibility="@{(!viewModel.uiMessageSecondBonusReceived.empty &amp;&amp; !viewModel.isBonusTwoReceived)? View.VISIBLE : View.GONE}"
                    android:text="@{viewModel.uiMessageSecondBonusReceived}"
                    tools:text="second Bonus"/>



                <LinearLayout
                    android:id="@+id/separator_bonuses_given"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bowling_gray_color_disabled"
                    android:orientation="vertical"
                    android:layout_marginTop="15sp"
                    android:visibility="@{(!viewModel.uiFirstBonusGivenProviderRollOrExtra.empty || !viewModel.uiSecondBonusGivenProviderRollOrExtra.empty) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@id/label_bonus_two_received"/>
                <TextView
                    android:id="@+id/label_bonuses_given"
                    android:text="Bonuses given"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    app:layout_constraintTop_toBottomOf="@id/separator_bonuses_given"
                    android:visibility="@{(!viewModel.uiFirstBonusGivenProviderRollOrExtra.empty || !viewModel.uiSecondBonusGivenProviderRollOrExtra.empty) ? View.VISIBLE : View.GONE}"
                    tools:text="label_bonuses_given"/>


                <TextView
                    android:id="@+id/provider_roll_or_provider_extra_for_first_bonus_given"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_white_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_given"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:visibility="@{!viewModel.uiFirstBonusGivenProviderRollOrExtra.empty ? View.VISIBLE : View.GONE}"
                    android:text="@{viewModel.uiFirstBonusGivenProviderRollOrExtra}"
                    tools:text="Extra #11"/>
                <ImageView
                    android:id="@+id/arrow_provider_roll_or_provider_extra_for_first_bonus_given"
                    android:src="@drawable/outline_arrow_forward_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/provider_roll_or_provider_extra_for_first_bonus_given"
                    app:layout_constraintBottom_toBottomOf="@id/provider_roll_or_provider_extra_for_first_bonus_given"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_given"
                    app:layout_constraintLeft_toRightOf="@id/provider_roll_or_provider_extra_for_first_bonus_given"
                    android:visibility="@{!viewModel.uiFirstBonusGivenProviderRollOrExtra.empty ? View.VISIBLE : View.GONE}" />
                <TextView
                    android:id="@+id/points_first_bonus_given"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:layout_marginLeft="5sp"
                    android:textColor="@color/bowling_black"
                    android:background="@drawable/rectangle_white_inside_border_black"
                    app:layout_constraintTop_toBottomOf="@id/label_bonuses_given"
                    app:layout_constraintLeft_toRightOf="@id/arrow_provider_roll_or_provider_extra_for_first_bonus_given"
                    android:visibility="@{!viewModel.uiFirstBonusGivenProviderRollOrExtra.empty ? View.VISIBLE : View.GONE}"
